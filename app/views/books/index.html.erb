<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

    <% @books.each do |book| %>
    <tbody>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book) %></td>
    </tbody>
    <% end %>

</table>



<h2>New book</h2>
<%= form_with model: @book do |f| %>

<label for="book_title">Title</label>
<div class="field">
  <%= f.text_field :title %>
</div>

<label for="book_body">Body</label>
<div class="field">
<%= f.text_area :body %>
</div>
<div class="actions">
<%= f.submit 'Create Book' %>
</div>

<% end %>


