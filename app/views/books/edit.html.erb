<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<label for="book_title">Title</label>
<div class="field">
  <%= f.text_field :title %>
</div>

<label for="book_body">Body</label>
<div class="field">
<%= f.text_area :body %>
</div>
<div class="actions">
<%= f.submit 'Update Book' %>
</div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
 |
<%= link_to "Back", '/books' %>